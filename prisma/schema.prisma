// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password         String
  auth_provider String
  avatar_url    String?
  role          UserRole @default(USER)
  created_at    DateTime  @default(now())
  city_id       String
  city          City      @relation(fields: [city_id], references: [id])
  reviews       Review[]
}

model City {
  id         String       @id @default(cuid())
  name       String
  slug       String       @unique
  image_url  String?
  users      User[]
  restaurants Restaurant[]
}

model Restaurant {
  id           String           @id @default(cuid())
  city_id      String
  name         String
  slug         String           @unique
  description  String?
  tags         Json?
  cuisine_type String
  latitude     Float
  longitude    Float
  image_url    String?
  created_at   DateTime         @default(now())
  city         City             @relation(fields: [city_id], references: [id])
  dishes       Dish[]
  stats        RestaurantStats?
}

model Dish {
  id           String      @id @default(cuid())
  restaurant_id String
  name         String
  slug         String      @unique
  category     String
  description  String?
  price        Float
  tags         Json?
  image_url    String?
  is_active    Boolean     @default(true)
  created_at   DateTime    @default(now())
  restaurant   Restaurant  @relation(fields: [restaurant_id], references: [id])
  reviews      Review[]
  stats        DishStats?
}

model Review {
  id        String   @id @default(cuid())
  user_id   String
  dish_id   String
  rating    Int
  comment   String?
  created_at DateTime @default(now())

  user      User     @relation(fields: [user_id], references: [id])
  dish      Dish     @relation(fields: [dish_id], references: [id])

  @@unique([user_id, dish_id])
}

model DishStats {
  dish_id       String  @id
  avg_rating    Float
  review_count  Int
  last_review_at DateTime
  score         Float
  updated_at    DateTime @default(now())

  dish          Dish     @relation(fields: [dish_id], references: [id])
}

model RestaurantStats {
  restaurant_id String  @id
  avg_dish_score Float
  total_reviews  Int
  dish_count     Int
  score          Float
  updated_at     DateTime @default(now())

  restaurant    Restaurant @relation(fields: [restaurant_id], references: [id])
}
